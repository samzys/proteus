<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
			width: 99%;
			height:30px;
			border: 1px solid  #bbb;
			background: #DEE4ED;
			margin: 2px;
			
			border-radius: 5px;
			
		}
		
		.images {
			width: 20px;
			margin: 3px;
			padding:2px;
		}
		
	</ui:style>

	<g:FlowPanel addStyleNames="{style.panel}">

		<g:Image ui:field="imgIcon" addStyleNames="{style.images}"
			url="resources/images/icon.png" title="Icon View" />
		<g:Image ui:field="imgDiagram" addStyleNames="{style.images}"
			url="resources/images/diagram.png" title="Diagram View" />
		<g:Image ui:field="imgCode" addStyleNames="{style.images}"
			url="resources/images/code.png" title="Code View" />
		<g:Image ui:field="imgDoc" addStyleNames="{style.images}"
			url="resources/images/document.png" title="Document View" />
	</g:FlowPanel>
</ui:UiBinder> 